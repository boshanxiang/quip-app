<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
<body>
    <%- include('./partials/header.ejs') %>
    <div id="container">
        <table>
            <% for(let postNum = 0; postNum < posts.length; postNum++) { 
                let postInstance = posts[postNum]; %>
                <tr>
                    <div class="subcontainer">
                        <p>
                            <a href="/posts/<%=postInstance.id%>">
                                <%= postInstance.title %>
                            </a> 
                            
                            <br>
                            
                            <%= postInstance.user %>
                            <br>
                        </p>
                    </div>
                </tr>
            <% } %>
        </table>
    </div>
</body>
<footer>
    <%- include('./partials/footer.ejs') %>
</footer>
</html>