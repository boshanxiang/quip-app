<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <div class="post-container">

        <div class="card">
            <div class="card-header">
                <a href="/posts/<%=post.id%>">
                    <h4><%= post.title %></h4>
                </a>
            </div>
            <div class="card-body">
                <h6 class="card-title"> <%= post.user %> </h6>
                <p class="card-text"> <%= post.body %> </p>
            </div>
            <div class="card-footer text-muted">
                2 days ago
                // to update
            </div>
        </div>

    </div>
    
    <!-- INTERACTION PANEL -->
    <% if(currentUser) { %>
        <div class="interact-panel">
            <!-- Upvote BUTTON -->
            <form action="/users/<%=post.id%>/upvote" method="POST" class="interact-btn">
                <input type="submit" value="Upvote">
            </form>
            <!-- Downvote BUTTON -->
            <form action="/users/<%=post.id%>/downvote" method="POST" class="interact-btn">
                <input type="submit" value="Downvote">
            </form>

            <!-- BOOKMARK BUTTON -->
            <form action="/users/<%=post.id%>/bookmark" method="POST" class="interact-btn">
                <input type="submit" value="Bookmark Post">
            </form>
            
            <%  if (currentUser.username === post.user) { %>
            <!-- DELETE BUTTON -->
            <form action="/posts/<%=post.id%>?_method=DELETE" method="POST" class="interact-btn">
                <input type="submit" value="Delete Post">
            </form>
            <!-- UPDATE BUTTON -->
            <form action="/posts/<%=post.id%>/edit" method="GET" class="interact-btn">
                <input type="submit" value="Update Post">
            </form>
        </div> 
    <% }} %>

    </div class="comment-container">
        <h3>Comments:</h3>
        <table>
        <% if(foundComments.length > 0) {
            for(let comment of foundComments) { %>
            <div class="comment">
                    <h5><%= comment.title %></h5>
                <br>
                    <%= comment.user %>
                <br>
                    <%= comment.body %>
            </div>
            <br>
        <% }} %>
            </table>
        <%- include('./partials/comments-form.ejs') %>
    <div>


    <%- include('./partials/bootstrapJS_Popper.ejs') %>
</body>
<footer>
    <style>
        .delete-update-btn {
            display: inline-block;
        }
    </style>
    <%- include('./partials/footer.ejs') %>
</footer>
</html>